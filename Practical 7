using Microsoft.AspNetCore.Mvc;
using System.Collections.Generic;

namespace SimpleRestApi.Controllers
{
    [Route("api/[controller]")]
    [ApiController]
    public class SimpleController : ControllerBase
    {
        // In-memory list to simulate data
        private static List<string> items = new List<string> { "Item1", "Item2", "Item3" };

        // GET api/simple
        [HttpGet]
        public ActionResult<IEnumerable<string>> Get()
        {
            return Ok(items);
        }

        // GET api/simple/5
        [HttpGet("{id}")]
        public ActionResult<string> Get(int id)
        {
            if (id < 0 || id >= items.Count)
            {
                return NotFound("Item not found.");
            }
            return Ok(items[id]);
        }

        // POST api/simple
        [HttpPost]
        public ActionResult Post([FromBody] string newItem)
        {
            items.Add(newItem);
            return CreatedAtAction(nameof(Get), new { id = items.Count - 1 }, newItem);
        }

        // PUT api/simple/5
        [HttpPut("{id}")]
        public ActionResult Put(int id, [FromBody] string updatedItem)
        {
            if (id < 0 || id >= items.Count)
            {
                return NotFound("Item not found.");
            }

            items[id] = updatedItem;
            return NoContent(); // Success, but no content to return
        }

        // DELETE api/simple/5
        [HttpDelete("{id}")]
        public ActionResult Delete(int id)
        {
            if (id < 0 || id >= items.Count)
            {
                return NotFound("Item not found.");
            }

            items.RemoveAt(id);
            return NoContent(); // Success, but no content to return
        }
    }
}
